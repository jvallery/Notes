{
  "$schema": "https://json-schema.org/draft/2020-12/schema",
  "$id": "extraction.schema.json",
  "$defs": {
    "Mentions": {
      "additionalProperties": false,
      "description": "Entities mentioned in the content.",
      "properties": {
        "people": {
          "description": "Names of people mentioned",
          "items": {
            "type": "string"
          },
          "title": "People",
          "type": "array"
        },
        "projects": {
          "description": "Projects referenced",
          "items": {
            "type": "string"
          },
          "title": "Projects",
          "type": "array"
        },
        "accounts": {
          "description": "Companies/accounts referenced",
          "items": {
            "type": "string"
          },
          "title": "Accounts",
          "type": "array"
        }
      },
      "title": "Mentions",
      "type": "object"
    },
    "TaskItem": {
      "additionalProperties": false,
      "description": "A single extracted task/action item.",
      "properties": {
        "text": {
          "description": "The action item text",
          "title": "Text",
          "type": "string"
        },
        "owner": {
          "anyOf": [
            {
              "type": "string"
            },
            {
              "type": "null"
            }
          ],
          "default": null,
          "description": "Person responsible, use 'Myself' for first-person",
          "title": "Owner"
        },
        "due": {
          "anyOf": [
            {
              "type": "string"
            },
            {
              "type": "null"
            }
          ],
          "default": null,
          "description": "Due date in YYYY-MM-DD format",
          "title": "Due"
        },
        "priority": {
          "default": "medium",
          "description": "Task priority level",
          "enum": [
            "highest",
            "high",
            "medium",
            "low",
            "lowest"
          ],
          "title": "Priority",
          "type": "string"
        },
        "related_person": {
          "anyOf": [
            {
              "type": "string"
            },
            {
              "type": "null"
            }
          ],
          "default": null,
          "description": "Person this task is about",
          "title": "Related Person"
        },
        "related_project": {
          "anyOf": [
            {
              "type": "string"
            },
            {
              "type": "null"
            }
          ],
          "default": null,
          "description": "Project this task belongs to",
          "title": "Related Project"
        },
        "related_account": {
          "anyOf": [
            {
              "type": "string"
            },
            {
              "type": "null"
            }
          ],
          "default": null,
          "description": "Account this task is for",
          "title": "Related Account"
        },
        "confidence": {
          "default": 1.0,
          "description": "Confidence in this task extraction",
          "maximum": 1.0,
          "minimum": 0.0,
          "title": "Confidence",
          "type": "number"
        }
      },
      "required": [
        "text"
      ],
      "title": "TaskItem",
      "type": "object"
    }
  },
  "additionalProperties": false,
  "description": "Schema for extracted meeting/email content. Version 1.0.\n\nUsed with OpenAI Structured Outputs to guarantee schema adherence.",
  "properties": {
    "version": {
      "const": "1.0",
      "default": "1.0",
      "description": "Schema version",
      "title": "Version",
      "type": "string"
    },
    "source_file": {
      "default": "",
      "description": "Path to source file (set by system)",
      "title": "Source File",
      "type": "string"
    },
    "processed_at": {
      "description": "Processing timestamp (set by system)",
      "format": "date-time",
      "title": "Processed At",
      "type": "string"
    },
    "note_type": {
      "description": "Type of note this content represents",
      "enum": [
        "customer",
        "people",
        "projects",
        "rob",
        "journal",
        "partners",
        "travel"
      ],
      "title": "Note Type",
      "type": "string"
    },
    "entity_name": {
      "anyOf": [
        {
          "type": "string"
        },
        {
          "type": "null"
        }
      ],
      "default": null,
      "description": "Primary entity (person name, account name, project name)",
      "title": "Entity Name"
    },
    "title": {
      "description": "Brief descriptive title (3-7 words)",
      "title": "Title",
      "type": "string"
    },
    "date": {
      "description": "Date of the meeting/email in YYYY-MM-DD format",
      "title": "Date",
      "type": "string"
    },
    "participants": {
      "description": "List of participant names",
      "items": {
        "type": "string"
      },
      "title": "Participants",
      "type": "array"
    },
    "summary": {
      "description": "2-3 sentence summary of key points",
      "title": "Summary",
      "type": "string"
    },
    "tasks": {
      "description": "Action items extracted",
      "items": {
        "$ref": "#/$defs/TaskItem"
      },
      "title": "Tasks",
      "type": "array"
    },
    "decisions": {
      "description": "Decisions made",
      "items": {
        "type": "string"
      },
      "title": "Decisions",
      "type": "array"
    },
    "facts": {
      "description": "Key facts to remember",
      "items": {
        "type": "string"
      },
      "title": "Facts",
      "type": "array"
    },
    "topics": {
      "description": "Topics discussed",
      "items": {
        "type": "string"
      },
      "title": "Topics",
      "type": "array"
    },
    "mentions": {
      "$ref": "#/$defs/Mentions",
      "description": "Entities mentioned in content"
    },
    "confidence": {
      "default": 1.0,
      "description": "Overall confidence in extraction (0.0-1.0)",
      "maximum": 1.0,
      "minimum": 0.0,
      "title": "Confidence",
      "type": "number"
    },
    "warnings": {
      "description": "Any concerns or ambiguities to flag for review",
      "items": {
        "type": "string"
      },
      "title": "Warnings",
      "type": "array"
    }
  },
  "required": [
    "note_type",
    "title",
    "date",
    "summary"
  ],
  "title": "ExtractionV1",
  "type": "object"
}
