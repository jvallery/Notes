{
  "$schema": "https://json-schema.org/draft/2020-12/schema",
  "$id": "changeplan.schema.json",
  "title": "ChangePlan",
  "description": "Schema for deterministic file operations using patch primitives",
  "type": "object",
  "required": ["version", "source_file", "extraction_file", "created_at", "operations"],
  "properties": {
    "version": {
      "const": "1.0",
      "description": "Schema version"
    },
    "source_file": {
      "type": "string",
      "description": "Path to original source file"
    },
    "extraction_file": {
      "type": "string",
      "description": "Path to extraction JSON"
    },
    "created_at": {
      "type": "string",
      "format": "date-time",
      "description": "Plan creation timestamp"
    },
    "operations": {
      "type": "array",
      "items": {
        "type": "object",
        "required": ["op", "path"],
        "properties": {
          "op": {
            "type": "string",
            "enum": ["create", "patch", "link", "update_entity"],
            "description": "Operation type (archive handled by Python)"
          },
          "path": {
            "type": "string",
            "description": "Target file path (relative to vault root)"
          },
          "template": {
            "type": "string",
            "description": "Jinja2 template name (for create)"
          },
          "context": {
            "type": "object",
            "description": "Template variables (for create)"
          },
          "patches": {
            "type": "array",
            "description": "Structured patch primitives (for patch)",
            "items": {
              "oneOf": [
                {
                  "type": "object",
                  "required": ["primitive", "frontmatter"],
                  "properties": {
                    "primitive": { "const": "upsert_frontmatter" },
                    "frontmatter": {
                      "type": "array",
                      "items": {
                        "type": "object",
                        "required": ["key", "value"],
                        "properties": {
                          "key": { "type": "string" },
                          "value": { "type": ["string", "array", "null"] }
                        }
                      }
                    }
                  }
                },
                {
                  "type": "object",
                  "required": ["primitive", "heading"],
                  "properties": {
                    "primitive": { "const": "append_under_heading" },
                    "heading": {
                      "type": "object",
                      "required": ["heading", "content"],
                      "properties": {
                        "heading": { "type": "string", "description": "Markdown heading (e.g., '## Recent Context')" },
                        "content": { "type": "string", "description": "Content to append" }
                      },
                      "additionalProperties": false
                    }
                  }
                },
                {
                  "type": "object",
                  "required": ["primitive", "heading"],
                  "properties": {
                    "primitive": { "const": "prepend_under_heading" },
                    "heading": {
                      "type": "object",
                      "required": ["heading", "content"],
                      "properties": {
                        "heading": { "type": "string", "description": "Markdown heading (e.g., '## Recent Context')" },
                        "content": { "type": "string", "description": "Content to prepend (for reverse-chronological ledgers)" }
                      },
                      "additionalProperties": false
                    }
                  }
                },
                {
                  "type": "object",
                  "required": ["primitive", "wikilinks"],
                  "properties": {
                    "primitive": { "const": "ensure_wikilinks" },
                    "wikilinks": {
                      "type": "array",
                      "items": { "type": "string" },
                      "description": "Wikilinks to ensure exist"
                    }
                  }
                }
              ]
            }
          },
          "links": {
            "type": "array",
            "items": { "type": "string" },
            "description": "Wikilinks to insert (for link op)"
          },
          "entity_update": {
            "type": "object",
            "description": "Entity details for update_entity op",
            "required": ["entity_type", "entity_name", "source_date", "source_note"],
            "properties": {
              "entity_type": { 
                "type": "string", 
                "enum": ["person", "project", "account"],
                "description": "Type of entity being updated"
              },
              "entity_name": { "type": "string", "description": "Name of the entity" },
              "source_date": { "type": "string", "format": "date", "description": "Date of source content" },
              "source_note": { "type": "string", "description": "Wikilink to source note" },
              "role": { "type": ["string", "null"] },
              "company": { "type": ["string", "null"] },
              "department": { "type": ["string", "null"] },
              "email": { "type": ["string", "null"] },
              "phone": { "type": ["string", "null"] },
              "linkedin": { "type": ["string", "null"] },
              "location": { "type": ["string", "null"] },
              "background": { "type": ["string", "null"] },
              "relationship": { "type": ["string", "null"] },
              "status": { "type": ["string", "null"] },
              "description": { "type": ["string", "null"] },
              "owner": { "type": ["string", "null"] },
              "blockers": { "type": "array", "items": { "type": "string" } },
              "next_steps": { "type": "array", "items": { "type": "string" } },
              "collaborators": { "type": "array", "items": { "type": "string" } },
              "industry": { "type": ["string", "null"] },
              "account_relationship": { "type": ["string", "null"] },
              "key_contacts": { "type": "array", "items": { "type": "string" } },
              "opportunities": { "type": "array", "items": { "type": "string" } },
              "related_projects": { "type": "array", "items": { "type": "string" } },
              "related_accounts": { "type": "array", "items": { "type": "string" } },
              "new_facts": { "type": "array", "items": { "type": "string" } },
              "context_line": { "type": ["string", "null"], "description": "Line to add under ## Recent Context" }
            }
          }
        }
      }
    },
    "warnings": {
      "type": "array",
      "items": { "type": "string" },
      "description": "Issues to flag for human review"
    }
  },
  "additionalProperties": false
}
